<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="60px"
            android:layout_marginLeft="5px"
            android:text="Create an account"
            android:textSize="54px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:layout_marginLeft="5px"
            android:text="Complete the sign up process to get started"
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:layout_marginLeft="5px"
            android:paddingTop="70px"
            android:textColor="@color/grey" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/outline"
            android:ems="10"
            android:hint="Ivanov Ivan"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:layout_marginLeft="5px"
            android:layout_marginTop="30px"
            android:textColor="@color/grey" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/outline"
            android:ems="10"
            android:hint="+7(999)999-99-99"
            android:inputType="phone"
            android:paddingLeft="10dp"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:layout_marginLeft="5px"
            android:layout_marginTop="30px"
            android:textColor="@color/grey" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/outline"
            android:ems="10"
            android:hint="******@gmail.com"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:layout_marginLeft="5px"
            android:layout_marginTop="30px"
            android:textColor="@color/grey" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/outline"
            android:ems="10"
            android:hint="**********"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:layout_marginLeft="5px"
            android:layout_marginTop="30px"
            android:textColor="@color/grey" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/outline"
            android:ems="10"
            android:hint="**********"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="900px"
            android:layout_height="wrap_content"
            android:layout_marginTop="35px"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#006CEC"
                android:checked="false" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0px"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/grey"
                android:text="By ticking this box, you agree to our Terms and conditions and private policy"
                android:textSize="30px" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            app:srcCompat="@drawable/signup" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/grey"
                android:text="Already have an account?" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:text="Sign in" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="15px"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textColor="@color/grey"
            android:text="or sign in using" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>